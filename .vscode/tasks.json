{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      // First open a nix-shell, which will ensure that the CMake project is
      // built.  Then we rsync the CMake project using checkums and *not*
      // preserving timestamps (because nix store files have no time stamps)
      // into a known directory (/src) from which we then setup a standard cmake
      // out folder at /cmake_out where we do the build.
      "command": "nix-shell --run \"${workspaceFolder}/.vscode/build.sh \\${reifyProject}/ ${workspaceFolder}/src/test_data/hypo\" ${workspaceFolder}/src/test_data/hypo",
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}